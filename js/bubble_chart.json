{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "title": "CO2 Emissions per Country",
    "data": {
        "url": "https://raw.githubusercontent.com/awan0049-monash/FIT3179/main/Assignment2/data/sustainable_energy.csv"
    },
    "params": [
        {
            "name": "Continent_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "North America",
                    "South America",
                    "Europe",
                    "Africa",
                    "Asia",
                    "Oceania"
                ],
                "labels": [
                    "Show All",
                    "North America",
                    "South America",
                    "Europe",
                    "Africa",
                    "Asia",
                    "Oceania"
                ],
                "name": "Continent Selection: "
            }
        },
        {
            "name": "Year_selection",
            "value": 2015,
            "bind": {
                "input": "range",
                "min": 2000,
                "max": 2015,
                "step": 1,
                "name": "Year: "
            }
        }
    ],
    "transform": [
        {"filter": "datum.Year == Year_selection"},
        {"filter": "Continent_selection == null || datum.Continent == Continent_selection"}
    ],
    "selection": {
        "continent_highlights": {
            "type": "multi",
            "fields": ["Continent"],
            "bind": "legend"
        }
    },
    "layer": [
        {
            "mark": "circle",
            "encoding": {
                "y": {
                    "field": "Value_co2_emissions_kt_by_country",
                    "type": "quantitative",
                    "title": "CO2 emissions Kt"
                },
                "x": {
                    "field": "Primary energy consumption per capita (kWh/person)",
                    "type": "quantitative",
                    "title": "Energy Consumption per capita (KWh)"
                },
                "color": {
                    "field": "Continent",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "North America",
                            "South America",
                            "Europe",
                            "Africa",
                            "Asia",
                            "Oceania"
                        ],
                        "range": [
                            "#e41a1c",
                            "#984ea3",
                            "#ff7f00",
                            "#a6cee3",
                            "#377eb8",
                            "#a65628"
                        ]
                    }
                },
                "opacity": {
                    "value": 0.6
                },
                "size": {
                    "field": "gdp_per_capita",
                    "type": "quantitative"
                },
                "tooltip": [
                    {"field": "Entity", "type": "nominal", "title": "Country"}
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -12,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "y": {
                    "field": "Value_co2_emissions_kt_by_country",
                    "type": "quantitative"
                },
                "x": {
                    "field": "Primary energy consumption per capita (kWh/person)",
                    "type": "quantitative"
                },
                "text": {"field": "Entity", "type": "nominal"},
                "color": {"value": "black"},
                "opacity": {
                    "condition": {
                        "test": "datum['Entity'] == 'China' || datum['Entity'] == 'Qatar' || datum['Entity'] == 'United States'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        }
    ]
}